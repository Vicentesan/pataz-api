{
  "$schema": "https://json.schemastore.org/tsconfig",
  "_version": "20.1.0",
  "lib": ["es2023"],
  "module": "Node16",
  "target": "es2022",
  "moduleResolution": "Node16",
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "~/*": ["../../*"]
    }
  },
  "include": ["src/**/*", "types/*.d.ts", "dist"]
}
